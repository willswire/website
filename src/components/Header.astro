<style>
	header {
		margin-bottom: 2rem;
		background: var(--gray-dark);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		width: 100%;
		padding: 0 1.5rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		color: var(--gray);
		padding: 0.75rem 0.5rem;
	}
	nav a.active {
		color: var(--white);
		text-decoration: none;
	}
	.social-links,
	.social-links a {
		display: flex;
	}

	@media (min-width: 768px) {
		nav {
			width: 750px;
			margin: 0 auto;
			padding: 0;
		}
	}
</style>
