---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const books = (await getCollection('reading')).sort(
	(a, b) => b.data.yearRead.valueOf() - a.data.yearRead.valueOf()
);

const booksGroupedByYear = books.reduce((acc, book) => {
	const year = book.data.yearRead;
	if (!acc[year]) acc[year] = [];
	acc[year].push(book);
	return acc;
}, {});
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(33.33% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: var(--white);
				line-height: 1;
			}
			.date {
				margin: 0.5rem 0;
				color: var(--gray);
			}
			ul li a:hover h4 {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: left;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				{
					Object.entries(booksGroupedByYear).map(([year, books]) => (
						<div>
							<h3>{year}</h3>
							<ul>
							{
								books.map((book) => (
									<li>
										<img width={720} height={360} src={book.data.coverImage} alt="" />
										<h4 class="title" style="font-size: 1.5rem; font-weight: bold;">{book.data.title}</h4>
										<p class="author" style="font-size: 1.2rem; color: var(--secondary-color);">{book.data.author}</p>
									</li>
								))
							}
							</ul>
						</div>
					))
				}
			</section>
		</main>
		<Footer />
	</body>
</html>
